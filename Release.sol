library Address {
    function isContract(address account) internal view returns (bool) {
        bytes32 codehash;
        bytes32 accountHash = 0xc5d2460186f7233c927e7db2dcc703c0e500b653ca82273b7bfad8045d85a470;
        // solhint-disable-next-line no-inline-assembly
        assembly { codehash := extcodehash(account) }
        return (codehash != 0x0 && codehash != accountHash);
    }
}

contract LockRelease {

    using SafeMath for uint;


    address public freeAddress = address(0);
    address public userAddress = address(0);
    uint public totalAmount = 4_000_000 ether;
    uint public releaseDays = 4  * 365;
    uint public latestReleaseTime = 0;
    uint public stepTime = 1 days;
    uint public releaseAmount = 0;
    string public name;

    constructor(address free, address user, uint totalAmount, uint releaseYears, string memory n)public{
        // need set receive address and free contractAddress
        freeAddress = free;
        userAddress = user;
        // need set total release amount and total release days
        totalAmount = 4_000_000 ether;
        releaseDays = releaseYears*365;
        latestReleaseTime = block.timestamp;
        name = n;
    }



    function getTime(uint time) public view returns(uint){
        uint t = time.div(stepTime).mul(stepTime);
        return t;
    }


    function Release() public {
        require(msg.sender == userAddress,"you can not get release");
        require(releaseAmount < totalAmount,"reward has been finished");
        require(latestReleaseTime <= getTime(block.timestamp),"not ready");
        uint d = getTime(block.timestamp).sub(getTime(latestReleaseTime)).div(stepTime);
        require(d > 0,"not ready");
        uint release = totalAmount.mul(d).div(releaseDays);
        if (release + releaseAmount >= totalAmount){
            release = totalAmount - releaseAmount;
        }
        latestReleaseTime = block.timestamp;
        releaseAmount = releaseAmount.add(release);
        IERC20(freeAddress).transfer(userAddress, release);
    }

    function checkReward() public view returns(uint) {
        uint d = getTime(block.timestamp).sub(getTime(latestReleaseTime)).div(stepTime);
        uint release = totalAmount.mul(d).div(releaseDays);
        if (release + releaseAmount >= totalAmount){
            release = totalAmount - releaseAmount;
        }
        return release;
    }

}